<div class="body">
  <h1><%= @bar.name %></h1>
    <div class="callout secondary">
      <%= @bar.description %>
    </div>

    <div class="callout">
      <%= @bar.address %>
      <%= @bar.city %>
      <%= @bar.state %>
      <%= @bar.zip %>
    </div>
    <% if current_user.id == @bar.user_id %>
      <%= link_to 'Edit', edit_bar_path(@bar) %>
      <%= link_to 'Delete', @bar, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
    <%= render 'reviews/form' %> <br>
    <div class="callout secondary">
    <% @reviews.each do |review| %>
      <p>
        <%= review.title %>
        <br>
        <%= review.body %>
        <br>
        Rating:<%= review.rating %>
        <br>
        Price:<%= review.price %>
      </p>
      <%= form_for ([review, @vote]) do |f| %>
        <%= f.hidden_field :user_id, value: current_user %>
        <%= f.submit 'Upvote', class: 'upvote-submit' %>
        <%= f.hidden_field :upvote, value: !current_user.votes.last.upvote %>
      <% end %>
      <%= form_for ([review, @vote]) do |f| %>
        <%= f.hidden_field :user_id, value: current_user %>
        <%= f.submit 'Downvote', class: 'downvote-submit' %>
        <%= f.hidden_field :upvote, value: false %>
      <% end %>
      <%= review.vote_count %>
    <% end %>
  </div>
</div>
