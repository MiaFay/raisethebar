<div class="body">
  <% if !user_signed_in? || user_signed_in? %>
  <h1><%= @bar.name %></h1>
  <% if current_user && current_user.admin? %>
  <%= link_to 'Delete Bar (Admin Power)', @bar , method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>

    <div class="callout secondary">
      <%= @bar.description %>
    </div>

    <div class="callout">
      <%= @bar.address %>
      <%= @bar.city %>
      <%= @bar.state %>
      <%= @bar.zip %>
    </div>
    <%= render 'reviews/form' %>
    <%= render @reviews %> <br>
    <% end %>
    <% if current_user.id == @bar.user_id %>
    <%= link_to 'Edit', edit_bar_path(@bar) %>
    <%= link_to 'Delete', @bar, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>

</div>
