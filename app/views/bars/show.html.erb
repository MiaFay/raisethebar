<div class="body">
  <h1><%= @bar.name %></h1>
    <div class="callout secondary">
      <%= @bar.description %>
    </div>

    <div class="callout">
      <%= @bar.address %>
      <%= @bar.city %>
      <%= @bar.state %>
      <%= @bar.zip %>
    </div>
    <% if current_user.id == @bar.user_id %>
      <%= link_to 'Edit', edit_bar_path(@bar) %>
      <%= link_to 'Delete', @bar, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>

    <%= render 'reviews/form' %> <br>

    <div class="callout secondary">
      <% @reviews.each do |review| %>
        <p>
          <%= review.title %>
          <br>
          <%= review.body %>
          <br>
          Rating:<%= review.rating %>
          <br>
          Price:<%= review.price %>
        </p>
        <%= form_for ([review, @vote]) do |f| %>
          <%= f.submit 'Upvote', class: 'upvote-submit' %>
          <%= f.hidden_field :upvote, value: true %>
        <% end %>
        <%= form_for ([review, @vote]) do |f| %>
          <%= f.submit 'Downvote', class: 'downvote-submit' %>
          <%= f.hidden_field :upvote, value: false %>
        <% end %>
        <% if review.votes.entries.length > 0 %>
          <%= review.vote_counter(review.votes) %>
        <% end %>
      <% end %>
    </div>
</div>
